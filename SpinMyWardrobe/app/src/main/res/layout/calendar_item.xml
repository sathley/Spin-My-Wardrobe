<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calendar_item_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:maxHeight="@android:dimen/thumbnail_height"
        android:maxWidth="@android:dimen/thumbnail_width"
        android:layout_margin="10dp"
        android:minHeight="80dp"
        android:minWidth="80dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/calendar_name"
        android:layout_alignTop="@+id/calendar_item_image"
        android:layout_toEndOf="@+id/calendar_item_image" />


</RelativeLayout>